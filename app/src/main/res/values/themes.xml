<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SneakersShip" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Heading_Anton">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/thirty_sp</item>
        <item name="fontFamily">@font/anton</item>
        <item name="android:padding">@dimen/dp_ten</item>
    </style>

    <style name="sub_heading_archivo_bold">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_textColor</item>
        <item name="fontFamily">@font/archivo_bold</item>
    </style>

    <style name="all_price_archivo_medium">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="fontFamily">@font/archivo_medium</item>
    </style>

    <style name="all_desc_archivo">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_textColor</item>
        <item name="fontFamily">@font/archivo</item>
    </style>

    <style name="all_desc_archivo_20sp">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_textColor</item>
        <item name="fontFamily">@font/archivo</item>
        <item name="android:padding">@dimen/dp_ten</item>
    </style>

    <style name="all_btn_text">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/archivo_bold</item>
    </style>

</resources>